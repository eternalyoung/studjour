<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= t('.title') %></title>
    <link rel="icon" type="image/x-icon" href=<%=asset_path('favicon.ico')%>>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class="container-md">
      <nav class="navbar navbar-expand-lg bg-light rounded mb-4">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src=<%=asset_path('favicon.ico')%> alt="Logo" width="24" height="24" class="d-inline-block align-text-top">
            <%= t('.title') %>
          </a>
          
          <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarsExample09" style="">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to t('.groups'), groups_path, class: 'nav-link' %>
              </li>
              <% unless current_user.nil? %>
              <li class="nav-item">
              <!-- TODO: fix link path -->
                <%= link_to t('.schedules'), root_path, class: 'nav-link' %>
              </li>
              <% end %>
              <!-- TODO: fix link path -->
                <%= link_to t('.changes'), root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
              <!-- TODO: fix link path -->
                <%= link_to t('.events'), root_path, class: 'nav-link'%>
              </li>
            </ul>
              <!-- TODO: fix link path -->
            <% if current_user.nil? %>
            <%= link_to t('.login'), rodauth.login_path, class: 'btn btn-outline-primary' %>
            <% else %>
            <%= link_to t('.profile'), rodauth.login_path, class: 'btn btn-outline-primary me-1' %>
            <%= link_to t('.logout'), rodauth.logout_path, class: 'btn btn-outline-danger' %>
            <% end %>
          </div>
        </div>
      </nav>

      <div class="container">
        <%= bootstrap_flash %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
