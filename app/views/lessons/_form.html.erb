<div class="row">
<div class="col-5">
  <%= form_for([@schedule, @lesson]) do |form| %>
    <% if lesson.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

        <ul>
          <% lesson.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :schedule_id %>

    <div class="mb-3">
      <%= form.label :number, class:"form-label" %>
      <%= form.number_field :number, class: "form-control", in: 1..8 %>
    </div>

    <div class="mb-3">
      <%= form.label :adjacent, class:"form-check-label" %>
      <%= form.check_box :adjacent, class: "form-check-input", in: 1..2 %>
    </div>

    <div class="mb-3">
      <%= form.label :subject_id, class:"form-label" %>
      <%= form.collection_select :subject_id, Subject.all, :id, :name, {}, { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.label :teacher_id, class:"form-label" %>
      <%= form.collection_select :teacher_id, Teacher.all, :id, :name, {}, { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.label :room_id, class:"form-label" %>
      <%= form.collection_select :room_id, Room.all, :id, :number, {}, { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.submit t(".save"), class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
</div>
